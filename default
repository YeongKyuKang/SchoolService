# HTTP -> HTTPS 리디렉션 (kangyk.com 및 www.kangyk.com)
server {
    listen 80;
    server_name kangyk.com www.kangyk.com;

    location / {
        return 301 https://$host$request_uri;  # HTTPS로 리디렉션
    }

    # Let's Encrypt 챌린지 처리 (인증서 발급용)
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}

# HTTPS 설정 (kangyk.com 및 www.kangyk.com)
server {
    listen 443 ssl http2;
    server_name kangyk.com www.kangyk.com;

    # SSL 인증서 경로 (필요시 주석 제거)
    ssl_certificate /etc/letsencrypt/live/kangyk.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kangyk.com/privkey.pem;

    # SSL 프로토콜 설정
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384";

    # HSTS (HTTP Strict Transport Security) 설정
    #add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload";

    # 보안 헤더 추가
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";

    location / {
            proxy_pass http://login.kangyk.com;
            proxy_redirect off;
    }

    # /login 경로의 요청을 login-service-svc로 프록시
    location /login {
        proxy_pass http://login.kangyk.com;  # 로그인 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # /main 경로의 요청을 main-service-svc로 프록시
    location /main {
        proxy_pass http://main.kangyk.com/main;  # 메인 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # /notice 경로의 요청을 notice-service-svc로 프록시
    location /notice {
        proxy_pass http://notice.kangyk.com/;  # 노티스 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /news {
        proxy_pass http://notice.kangyk.com/news;  # 노티스 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # /course_registration 경로의 요청을 course-service-svc로 프록시
    location /course_registration {
        proxy_pass http://course.kangyk.com/course_registration;  # 코스 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # /festival 경로의 요청을 festival-service-svc로 프록시
    location /festival {
        proxy_pass http://festival.kangyk.com/festival;  # 페스티벌 서비스 LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /argocd {
        proxy_pass http://argocd.kangyk.com/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}